<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#37474F"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ian.malerich.com.calculator.CalcActivity"
    tools:showIn="@layout/activity_calc">

    <LinearLayout
        android:orientation="vertical"
        android:background="#FFF"
        android:elevation="12dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/expression_view"
            android:padding="18dp"
            android:textSize="18dp"
            android:textColor="#666"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:autoText="false"
            android:text=""
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/result_view"
            android:padding="24dp"
            android:textSize="32dp"
            android:textColor="#000"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="0"
            android:gravity="center_vertical|right" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:elevation="10dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:textColor="#CFD8DC"
                    android:textSize="32dp"
                    android:fontFamily="sans-serif-light"
                    android:text="7"
                    android:onClick="didEnterDigit"
                    android:id="@+id/seven" />

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:textColor="#CFD8DC"
                    android:textSize="32dp"
                    android:fontFamily="sans-serif-light"
                    android:text="8"
                    android:onClick="didEnterDigit"
                    android:id="@+id/eight" />

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:textColor="#CFD8DC"
                    android:textSize="32dp"
                    android:fontFamily="sans-serif-light"
                    android:text="9"
                    android:onClick="didEnterDigit"
                    android:id="@+id/nine" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:textColor="#CFD8DC"
                    android:textSize="32dp"
                    android:fontFamily="sans-serif-light"
                    android:text="4"
                    android:onClick="didEnterDigit"
                    android:id="@+id/four" />

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:textColor="#CFD8DC"
                    android:textSize="32dp"
                    android:fontFamily="sans-serif-light"
                    android:text="5"
                    android:onClick="didEnterDigit"
                    android:id="@+id/five" />

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:textColor="#CFD8DC"
                    android:textSize="32dp"
                    android:fontFamily="sans-serif-light"
                    android:text="6"
                    android:onClick="didEnterDigit"
                    android:id="@+id/six" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:textColor="#CFD8DC"
                    android:textSize="32dp"
                    android:fontFamily="sans-serif-light"
                    android:text="1"
                    android:onClick="didEnterDigit"
                    android:id="@+id/one" />

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:textColor="#CFD8DC"
                    android:textSize="32dp"
                    android:fontFamily="sans-serif-light"
                    android:text="2"
                    android:onClick="didEnterDigit"
                    android:id="@+id/two" />

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:textColor="#CFD8DC"
                    android:textSize="32dp"
                    android:fontFamily="sans-serif-light"
                    android:text="3"
                    android:onClick="didEnterDigit"
                    android:id="@+id/three" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:textColor="#CFD8DC"
                    android:textSize="32dp"
                    android:text="."
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/dot" />

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:textColor="#CFD8DC"
                    android:fontFamily="sans-serif-light"
                    android:textSize="32dp"
                    android:text="0"
                    android:onClick="didEnterDigit"
                    android:id="@+id/zero" />

                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#00FFFFFF"
                    android:textColor="#CFD8DC"
                    android:textSize="32dp"
                    android:text="Σ"
                    android:fontFamily="sans-serif-light"
                    android:onClick="addToExpression"
                    android:id="@+id/sigma" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:elevation="11dp"
            android:orientation="vertical"
            android:background="#FFF"
            android:padding="6dp"
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#00FFFFFF"
                android:fontFamily="sans-serif-light"
                android:textSize="32dp"
                android:text="÷"
                android:onClick="selectOperator"
                android:id="@+id/divide" />

            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#00FFFFFF"
                android:fontFamily="sans-serif-light"
                android:textSize="32dp"
                android:text="×"
                android:onClick="selectOperator"
                android:id="@+id/multiply" />

            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:background="#00FFFFFF"
                android:layout_height="0dp"
                android:fontFamily="sans-serif-light"
                android:textSize="32dp"
                android:text="-"
                android:onClick="selectOperator"
                android:id="@+id/subtract" />

            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#00FFFFFF"
                android:fontFamily="sans-serif-light"
                android:textSize="32dp"
                android:text="+"
                android:onClick="selectOperator"
                android:id="@+id/add" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
